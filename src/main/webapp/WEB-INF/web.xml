<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Emergee</display-name>

    <servlet>
        <servlet-name>Initialization</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.InitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Service</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletService</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletIndex</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletLogin</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletRegistration</param-value>
        </init-param>
        <load-on-startup>9</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>CheckUserLogin</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletCheckUser</param-value>
        </init-param>
        <load-on-startup>5</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletLogout</param-value>
        </init-param>
        <load-on-startup>6</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>GoogleLogin</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletGoogleLogin</param-value>
        </init-param>
        <load-on-startup>7</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>UpdateProfile</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletUpdateProfile</param-value>
        </init-param>
        <load-on-startup>8</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveProfileSettings</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveProfile</param-value>
        </init-param>
        <load-on-startup>9</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>CheckRegistrationEmail</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletCheckRegistrationEmail</param-value>
        </init-param>
        <load-on-startup>10</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Service</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/registration</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckUserLogin</servlet-name>
        <url-pattern>/check_login_details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>GoogleLogin</servlet-name>
        <url-pattern>/glogin</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SaveProfileSettings</servlet-name>
        <url-pattern>/saveProfile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>UpdateProfile</servlet-name>
        <url-pattern>/updateProfile</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckRegistrationEmail</servlet-name>
        <url-pattern>/check_registration_email</url-pattern>
    </servlet-mapping>
</web-app>