<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Emergee</display-name>

    <servlet>
        <servlet-name>Initialization</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.InitializationServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Service</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletService</param-value>
        </init-param>
        <load-on-startup>2</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletIndex</param-value>
        </init-param>
        <load-on-startup>3</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletLogin</param-value>
        </init-param>
        <load-on-startup>4</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>CheckUserLogin</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletCheckUser</param-value>
        </init-param>
        <load-on-startup>5</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletLogout</param-value>
        </init-param>
        <load-on-startup>6</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveName</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveName</param-value>
        </init-param>
        <load-on-startup>7</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveCity</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveCity</param-value>
        </init-param>
        <load-on-startup>8</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveCountry</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveCountry</param-value>
        </init-param>
        <load-on-startup>9</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveHouseNum</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveHouseNum</param-value>
        </init-param>
        <load-on-startup>10</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveIdCard</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveIdCard</param-value>
        </init-param>
        <load-on-startup>11</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SavePhoneNumber</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSavePhoneNumber</param-value>
        </init-param>
        <load-on-startup>12</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveStreet</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveStreet</param-value>
        </init-param>
        <load-on-startup>13</load-on-startup>
    </servlet>

    <servlet>
        <servlet-name>SaveZipCode</servlet-name>
        <servlet-class>com.codecool.amf.initServlet.DelegateHttpServlet</servlet-class>

        <init-param>
            <param-name>servletContextKey</param-name>
            <param-value>servletSaveZipCode</param-value>
        </init-param>
        <load-on-startup>14</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>Service</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CheckUserLogin</servlet-name>
        <url-pattern>/check_login_details</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/static/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SaveName</servlet-name>
        <url-pattern>/saveName</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>SaveCity</servlet-name>
        <url-pattern>/saveCity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveCountry</servlet-name>
        <url-pattern>/saveCountry</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveHouseNum</servlet-name>
        <url-pattern>/saveHouseNum</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveIdCard</servlet-name>
        <url-pattern>/saveIdCard</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SavePhoneNumber</servlet-name>
        <url-pattern>/savePhoneNumber</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveStreet</servlet-name>
        <url-pattern>/saveStreet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SaveZipCode</servlet-name>
        <url-pattern>/saveZipCode</url-pattern>
    </servlet-mapping>
</web-app>